<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Asignatura">

    <EditText
        android:id="@+id/editText_estadoAsi"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Favorito (Si o No)"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_fechaAsi"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/editText_fechaAsi"
        app:layout_constraintTop_toBottomOf="@+id/editText_fechaAsi" />

    <EditText
        android:id="@+id/editText_autorAsi"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Docente"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_nombreAsi"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/editText_nombreAsi"
        app:layout_constraintTop_toBottomOf="@+id/editText_nombreAsi" />

    <EditText
        android:id="@+id/editText_fechaAsi"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="AAA-MM-DD"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_autorAsi"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/editText_autorAsi"
        app:layout_constraintTop_toBottomOf="@+id/editText_autorAsi" />

    <EditText
        android:id="@+id/editText_nombreAsi"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Asignatura"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <Button
        android:id="@+id/btn_insertarAsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="INSERTAR ASIGNATURA"
        app:layout_constraintEnd_toEndOf="@+id/editText_estadoAsi"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/editText_estadoAsi"
        app:layout_constraintTop_toBottomOf="@+id/editText_estadoAsi" />

    <ListView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:id="@+id/listview_asignatura"
        android:layout_width="406dp"
        android:layout_height="320dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_insertarAsi"
        tools:layout_editor_absoluteX="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>